@import "../../assets/less/variable";

.editorHeader {
  height: 48px;
  background-color: #333333 !important;
  box-shadow: @header-box-shadow;
  z-index: @header-index;
  display: flex;
  flex-direction: row;

  .back {
    flex-shrink: 0;
    padding: 4px 8px 0;
    font-size: 2em;
    line-height: 44px;
    // color: @disabled-text-color;
    color: #bfbfbf;
    cursor: pointer;

    &:hover {
      background-color: rgba(26, 179, 148, 0.4);
    }
  }

  .title {
    flex: 1;
    padding: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    color: #fff;

    .name {
      flex-shrink: 0;
      font-size: 1.5em;
      position: relative;
    }

    .desc {
      flex: 1;
      height: 1.65em;
      line-height: 1.65em;
      color: @light-text-color;
      padding: 0 16px;
      position: relative;
      .ellipsis;

      input {
        left: 16px;
        color: #fff;
      }
    }

    .name,
    .desc {
      span {
        display: block;
        visibility: hidden;
      }
    }

    input {
      width: 100%;
      border: 0;
      outline: 0;
      position: absolute;
      top: 0;
      cursor: pointer;
      background-color: #333333;

      &::-webkit-input-placeholder {
        color: #bfbfbf;
      }
      &::-moz-placeholder {
        color: #bfbfbf;
      }
      &:-ms-input-placeholder {
        color: #bfbfbf;
      }
      &:-moz-placeholder {
        color: #bfbfbf;
      }
    }
  }

  .actions {
    flex-shrink: 0;
    padding: 0 16px;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;

    button {
      width: 70px;
    }
  }
}
